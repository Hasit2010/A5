<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Register</title>
</head>
<body>
    <%- include('partials/navbar', {page: '/register'}) %>

    <div class="hero bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Register</h1>
                <p class="py-6">Create a new account</p>
            </div>
        </div>
    </div>

    <div class="container mx-auto p-6">
        <% if(typeof successMessage === 'undefined' || !successMessage){ %>
            <form method="POST" action="/register" class="max-w-md mx-auto space-y-4">
                <div class="form-control">
                    <input type="text" name="userName" placeholder="User Name" class="input input-bordered" 
                        value="<%= typeof userName !== 'undefined' ? userName : '' %>" required>
                </div>
                <div class="form-control">
                    <input type="password" name="password" placeholder="Password" class="input input-bordered" required>
                </div>
                <div class="form-control">
                    <input type="password" name="password2" placeholder="Confirm Password" class="input input-bordered" required>
                </div>
                <div class="form-control">
                    <input type="email" name="email" placeholder="Email Address" class="input input-bordered" required>
                </div>
                <button type="submit" class="btn btn-primary w-full">Register</button>
            </form>
        <% } %>

        <% if(typeof errorMessage !== 'undefined' && errorMessage){ %>
            <div class="alert alert-error mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= errorMessage %></span>
            </div>
        <% } %>

        <% if(typeof successMessage !== 'undefined' && successMessage){ %>
            <div class="alert mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= successMessage %></span>
            </div>
            <br />
            <a href="/login" class="btn btn-success">Proceed to Log in</a>
        <% } %>
    </div>
</body>
</html>
