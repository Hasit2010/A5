<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Country</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '' }) %>

    <div class="container mx-auto px-4">
        <div class="hero bg-base-200 rounded-lg p-6 mb-8">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Edit Country</h1>
                    <p class="py-6">Editing: <%= country.commonName %></p>
                </div>
            </div>
        </div>

        <form action="/editCountry" method="POST" class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="form-control">
                        <label class="label">Common Name</label>
                        <input type="text" name="commonName" required class="input input-bordered" 
                            value="<%= country.commonName %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Official Name</label>
                        <input type="text" name="officialName" required class="input input-bordered" 
                            value="<%= country.officialName %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Native Name</label>
                        <input type="text" name="nativeName" required class="input input-bordered" 
                            value="<%= country.nativeName %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Numeric-3 Code</label>
                        <input type="text" name="id" required class="input input-bordered cursor-not-allowed" 
                            value="<%= country.id %>" readonly>
                    </div>

                    <div class="form-control">
                        <label class="label">Capital</label>
                        <input type="text" name="capital" required class="input input-bordered" 
                            value="<%= country.capital %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Languages</label>
                        <input type="text" name="languages" required class="input input-bordered" 
                            value="<%= country.languages %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Population</label>
                        <input type="number" name="population" required class="input input-bordered" 
                            value="<%= country.population %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Area</label>
                        <input type="number" name="area" required class="input input-bordered" 
                            value="<%= country.area %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Currencies</label>
                        <input type="text" name="currencies" required class="input input-bordered" 
                            value="<%= country.currencies %>">
                    </div>

                    <div class="form-control">
                        <label class="label">(Sub) Region</label>
                        <select name="subRegionId" required class="select select-bordered">
                            <% subRegions.forEach(subRegion=>{ %>
                                <option <%= (country.subRegionId == subRegion.id) ? "selected" : "" %> 
                                    value="<%= subRegion.id %>">
                                    <%= subRegion.subRegion %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Is Landlocked?</span>
                            <input type="checkbox" name="landlocked" class="checkbox" 
                                <%= country.landlocked ? "checked" : "" %>>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label">Open Street Maps URL</label>
                        <input type="text" name="openStreetMaps" class="input input-bordered" 
                            value="<%= country.openStreetMaps %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Flag Image URL</label>
                        <input type="text" name="flag" required class="input input-bordered" 
                            value="<%= country.flag %>">
                    </div>

                    <div class="form-control">
                        <label class="label">Coat of Arms URL</label>
                        <input type="text" name="coatOfArms" required class="input input-bordered" 
                            value="<%= country.coatOfArms %>">
                    </div>
                </div>

                <div class="card-actions justify-end mt-6">
                    <button type="submit" class="btn btn-primary">Update Country</button>
                    <a href="/deleteCountry/<%= country.id %>" class="btn btn-error">Delete Country</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html> 