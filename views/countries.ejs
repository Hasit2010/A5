<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Countries</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <%- include('partials/navbar', {page: '/countries'}) %>

  <br />

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Countries</h1>

          <p class="py-6">Filter by Region:</p>
          <div class="flex flex-wrap gap-2 justify-center">
            <a href="/countries" class="btn btn-sm <%= !region ? 'btn-active' : '' %>">All</a>
            <a href="/countries?region=Africa" class="btn btn-sm <%= region === 'Africa' ? 'btn-active' : '' %>">Africa</a>
            <a href="/countries?region=Americas" class="btn btn-sm <%= region === 'Americas' ? 'btn-active' : '' %>">Americas</a>
            <a href="/countries?region=Asia" class="btn btn-sm <%= region === 'Asia' ? 'btn-active' : '' %>">Asia</a>
            <a href="/countries?region=Europe" class="btn btn-sm <%= region === 'Europe' ? 'btn-active' : '' %>">Europe</a>
            <a href="/countries?region=Oceania" class="btn btn-sm <%= region === 'Oceania' ? 'btn-active' : '' %>">Oceania</a>
          </div>

        </div>
      </div>
    </div>

    <br />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
      <% countries.forEach(country => { %>
        <div class="card bg-base-100 shadow-xl h-full">
          <figure class="aspect-[2/1] relative overflow-hidden">
            <img src="<%= country.flag %>" 
                 alt="<%= country.commonName %> flag"
                 class="object-cover w-full h-full"
                 style="aspect-ratio: 2/1;">
          </figure>
          <div class="card-body p-6">
            <h2 class="card-title text-2xl mb-4"><%= country.commonName %></h2>
            <div class="space-y-2">
              <p><span class="font-semibold">Capital:</span> <%= country.capital %></p>
              <p><span class="font-semibold">Region:</span> <%= country.SubRegion ? country.SubRegion.region : 'N/A' %></p>
            </div>
            <div class="card-actions justify-end mt-4">
              <a href="/country/<%= country.id %>" class="btn btn-primary">Learn More</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

  </div>
</body>

</html>
