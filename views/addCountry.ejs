<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Add Country</title>
</head>
<body>
    <%- include('partials/navbar', {page: '/addCountry'}) %>

    <div class="hero bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Add Country</h1>
                <p class="py-6">Add a new country to the collection</p>
            </div>
        </div>
    </div>

    <div class="container mx-auto p-6">
        <form method="POST" action="/addCountry" class="max-w-2xl mx-auto space-y-4">
            <div class="form-control">
                <label class="label"><span class="label-text">Common Name</span></label>
                <input type="text" name="commonName" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Official Name</span></label>
                <input type="text" name="officialName" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Native Name</span></label>
                <input type="text" name="nativeName" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">ID (ISO Numeric-3 Code)</span></label>
                <input type="text" name="id" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Capital</span></label>
                <input type="text" name="capital" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Languages</span></label>
                <input type="text" name="languages" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Population</span></label>
                <input type="number" name="population" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Area</span></label>
                <input type="number" name="area" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Currencies</span></label>
                <input type="text" name="currencies" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Sub Region</span></label>
                <select name="subRegionId" class="select select-bordered" required>
                    <% subRegions.forEach(subRegion=>{ %>
                        <option value="<%= subRegion.id %>">
                            <%= subRegion.subRegion %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="form-control">
                <label class="label cursor-pointer">
                    <span class="label-text">Landlocked</span>
                    <input type="checkbox" name="landlocked" class="checkbox">
                </label>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">OpenStreetMaps URL</span></label>
                <input type="text" name="openStreetMaps" class="input input-bordered">
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Flag URL</span></label>
                <input type="text" name="flag" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label"><span class="label-text">Coat of Arms URL</span></label>
                <input type="text" name="coatOfArms" class="input input-bordered" required>
            </div>

            <button type="submit" class="btn btn-primary w-full">Add Country</button>
        </form>
    </div>
</body>
</html>